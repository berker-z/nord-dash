# .env.example - copy to .env and fill in the values

# Google OAuth client ID
VITE_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
VITE_GOOGLE_CLIENT_SECRET=something

# Allowed email addresses (comma‑separated)
VITE_ALLOWED_EMAILS=your.email@example.com,another.email@example.com

# OpenAI API key
VITE_OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Firebase configuration
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY_HERE
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID

# (Optional) Google Gemini API key – only needed if using Gemini service
VITE_GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
COINGECKO_API_KEY=SOMEKEY